<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashScreenActivity">

    <RelativeLayout
        android:id="@+id/landing_scr"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/landing_scr">


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/poppins_bold"
            android:padding="5dp"
            android:text="@string/zappi"
            android:textColor="@color/faint_pink"
            android:textSize="42sp"
            android:layout_marginStart="18dp"
            app:fontFamily="@font/poppins_bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            android:gravity="center">


            <EditText
                android:id="@+id/edit_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius"
                android:backgroundTint="@color/white"
                android:hint="@string/enter_phone_number"
                android:padding="15dp"
                android:inputType="number"
                android:fontFamily="@font/poppins_medium"
                app:fontFamily="@font/poppins_medium"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_phoneNumber"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/faint_pink"
                app:cornerRadius="15dp"
                app:fontFamily="@font/poppins_medium"
                app:strokeColor="@color/faint_pink" />

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txt_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/poppins"
            android:padding="5dp"
            android:text="@string/by_continuing_you_agree_to_our_terms_of_use_privacy_policy"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            app:fontFamily="@font/poppins" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/txt_continue"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/txt_termsOfUse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/terms_of_use"
                android:textColor="@color/offer_pink"
                android:gravity="end"
                android:textSize="12sp"
                android:layout_weight="0.5"
                android:layout_centerHorizontal="true"
                app:fontFamily="@font/poppins_bold" />

            <TextView
                android:id="@+id/txt_privacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/privacy_policy"
                android:textColor="@color/offer_pink"
                android:textSize="12sp"
                android:layout_weight="0.5"
                android:layout_marginStart="5dp"
                android:layout_centerHorizontal="true"
                app:fontFamily="@font/poppins_bold" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>